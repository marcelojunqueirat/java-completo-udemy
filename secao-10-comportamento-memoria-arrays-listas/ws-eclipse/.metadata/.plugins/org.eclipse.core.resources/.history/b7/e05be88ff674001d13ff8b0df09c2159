package application;

import java.util.Locale;
import java.util.Scanner;

public class Program {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.printf("Quantos números voce vai digitar? ");
		int n = sc.nextInt();
		if (n > 10) {
			System.out.println("Você deve digitar um número de no máximo até valor 10. Digite novamente: ");
		}
		
		
		
		sc.close();
	}

}
