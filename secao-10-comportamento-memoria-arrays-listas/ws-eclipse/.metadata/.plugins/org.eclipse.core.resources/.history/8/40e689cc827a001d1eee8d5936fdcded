package application;

import java.util.ArrayList;
import java.util.List;

public class Program {

	public static void main(String[] args) {
		
		/* List é uma interface, por isso para instancia-la precisa de uma classe, no exemplo abaixo usado a classe ArrayList */
		List<String> list = new ArrayList<>();
		
		/*Adicionar Elemento*/
		list.add("Maria");
		list.add("Alex");
		list.add("Bob");
		list.add("Anna");
		
		/*Adicionar Elemento na posição 2 da lista, depois do Alex*/
		list.add(2, "Marco");
		
		/*Tamanho da lista*/
		System.out.println(list.size());
		
		for (String nome : list) {
			System.out.println(nome);
		}
		
		System.out.println("-------------");
		
		/*Remover elemento da lista, removendo Ana e por posição 1*/
		list.remove("Anna");
		list.remove(1);
		
		/*Remover elementos da lista por predicado,remover todos os elementos que começam com "M" */
		list.removeIf(nome -> nome.charAt(0) == "M")
		
		for (String nome : list) {
			System.out.println(nome);
		}
	}
}
